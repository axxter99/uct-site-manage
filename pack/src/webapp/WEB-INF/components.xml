<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="org.sakaiproject.uctsitemanage.SectionFieldProvider"
			class="org.sakaiproject.sitemanage.impl.SectionFieldProviderImpl"
			init-method="init"
			destroy-method="destroy"
			singleton="true">
	</bean>
	
	<bean id="org.sakaiproject.sitemanage.api.AffiliatedSectionProvider"
			class="org.sakaiproject.uctsitemanage.UCTSectionProvider"
			init-method="init"
			destroy-method="destroy"
			singleton="true">
			<property name="sakaiPersonManager" ref="org.sakaiproject.api.common.edu.person.SakaiPersonManager"/>
			<property name="userDirectoryService" ref="org.sakaiproject.user.api.UserDirectoryService" />
			<property name="courseManagementService" ref="org.sakaiproject.coursemanagement.api.CourseManagementService" />
	</bean>
	
	<bean id="org.sakaiproject.sitemanage.api.UserNotificationProvider" 
		class="org.sakaiproject.uctsitemanage.UserNotificationProviderImpl"
		init-method="init"
		singleton="true" >
		<property name="emailService" ref="org.sakaiproject.email.api.EmailService"/>
		<property name="userDirectoryService" ref="org.sakaiproject.user.api.UserDirectoryService"/>
		<property name="serverConfigurationService" ref="org.sakaiproject.component.api.ServerConfigurationService"/>
		<property name="emailTemplateService" ref="org.sakaiproject.emailtemplateservice.service.EmailTemplateService"/>
	</bean>
</beans>
